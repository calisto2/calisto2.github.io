import java.util.Scanner;

public class GestionEmpleado {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

   int n;
   boolean salida = true;
   int opcion;
   
   
   Scanner teclado = new Scanner (System.in);
   System.out.println("Numero de empleado: ");
   n = teclado.nextInt();
   
   String [] Noms = new String[n];
   int [] Edades = new int[n];
   double [] Sueldos = new double[n];
   
   
  
		
		
	try {
		
		   for (int i=1; i<=n;i++) {
			  System.out.println("Nombre del empleado " + i + " : ");
			  Noms [i] = teclado.next();
			  do {
				  System.out.println("Edad: ");
				  Edades [i] = teclado.nextInt();
			  } while ((Edades[i] > 67) || (Edades[i] < 16));

			  System.out.println("Numero de  Sueldo: ");
			  Sueldos [i] = teclado.nextDouble();		   
		   }
		while (salida) {
			System.out.println("0-Salir ");
			System.out.println("1-Mostrar empleado ");
			opcion = teclado.nextInt();
			if (opcion==0) {salida = false;}
		
		}	
		
		
	 }catch (Exception e) {};
		
	 
	}
	
	
	
	

}
